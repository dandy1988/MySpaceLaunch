<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date_of_period"
        android:textColor="@color/RED"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day"/>
        <EditText
            android:id="@+id/etStartDay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength= "2"
            android:inputType="number"
            android:hint="1-31"
            android:text="20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month"/>
        <EditText
            android:id="@+id/etStartMonth"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="1-12"
            android:maxLength= "2"
            android:inputType="number"
            android:text="7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year"/>
        <EditText
            android:id="@+id/etStartYear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength= "4"
            android:inputType="number"
            android:hint="1961-.."
            android:text="2015"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_date_of_period"
        android:textColor="@color/RED"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day"/>
        <EditText
            android:id="@+id/etEndDay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength= "2"
            android:inputType="number"
            android:hint="1-31"
            android:text="20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month"/>
        <EditText
            android:id="@+id/etEndMonth"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength= "2"
            android:inputType="number"
            android:hint="1-12"
            android:text="8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year"/>
        <EditText
            android:id="@+id/etEndYear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength= "4"
            android:inputType="number"
            android:hint="1961-.."
            android:text="2015"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/RED"
            android:text="@string/max_amount_of_launches_for_return"/>
        <EditText
            android:id="@+id/etAmountLanches"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength= "2"
            android:inputType="number"
            android:hint="1-99"
            android:text="20"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_getPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_launches_of_period"
        android:onClick="btn_getPeriod"/>

    <CheckedTextView
        android:id="@+id/checkedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/GREEN"
        android:textSize="17sp"
        android:text="@string/result_of_request" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:context=".MainActivity">
    </androidx.recyclerview.widget.RecyclerView>




